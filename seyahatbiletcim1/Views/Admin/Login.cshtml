      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- The fav icon -->
    <link rel="shortcut icon" href="~/Design/img/favicon.ico">

</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="span12 center login-header">
                   
                </div><!--/span-->
            </div><!--/row-->

            <div class="row-fluid">
                <div class="well span5 center login-box">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["Message"].ToString()
                        </div>
                    }
                    <div class="modal-body">
                        <h2 class="title text-center">Seyahatbiletcim Admin Login Panel <span class="title-under"></span>  </h2>
                        <section id="loginForm">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                       
                                        <button type="submit" onclick="/Admin/Index"  value="Log in" class="btn btn-primary pull-right" name="donateNow" >Giriş Yap</button>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div><!--/span-->
            </div><!--/row-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
    <!-- external javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jQuery -->
    <script src="~/Design/js/jquery-1.7.2.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/Design/js/jquery-ui-1.8.21.custom.min.js"></script>
    <!-- transition / effect library -->
    <script src="~/Design/js/bootstrap-transition.js"></script>
    <!-- alert enhancer library -->
    <script src="~/Design/js/bootstrap-alert.js"></script>
    <!-- modal / dialog library -->
    <script src="~/Design/js/bootstrap-modal.js"></script>
    <!-- custom dropdown library -->
    <script src="~/Design/js/bootstrap-dropdown.js"></script>
    <!-- scrolspy library -->
    <script src="~/Design/js/bootstrap-scrollspy.js"></script>
    <!-- library for creating tabs -->
    <script src="~/Design/js/bootstrap-tab.js"></script>
    <!-- library for advanced tooltip -->
    <script src="~/Design/js/bootstrap-tooltip.js"></script>
    <!-- popover effect library -->
    <script src="~/Design/js/bootstrap-popover.js"></script>
    <!-- button enhancer library -->
    <script src="~/Design/js/bootstrap-button.js"></script>
    <!-- accordion library (optional, not used in demo) -->
    <script src="~/Design/js/bootstrap-collapse.js"></script>
    <!-- carousel slideshow library (optional, not used in demo) -->
    <script src="~/Design/js/bootstrap-carousel.js"></script>
    <!-- autocomplete library -->
    <script src="~/Design/js/bootstrap-typeahead.js"></script>
    <!-- tour library -->
    <script src="~/Design/js/bootstrap-tour.js"></script>
    <!-- library for cookie management -->
    <script src="~/Design/js/jquery.cookie.js"></script>
    <!-- calander plugin -->
    <script src='~/Design/js/fullcalendar.min.js'></script>
    <!-- data table plugin -->
    <script src='~/Design/js/jquery.dataTables.min.js'></script>
    <!-- chart libraries start -->
    <script src="~/Design/js/excanvas.js"></script>
    <script src="~/Design/js/jquery.flot.min.js"></script>
    <script src="~/Design/js/jquery.flot.pie.min.js"></script>
    <script src="~/Design/js/jquery.flot.stack.js"></script>
    <script src="~/Design/js/jquery.flot.resize.min.js"></script>
    <!-- chart libraries end -->
    <!-- select or dropdown enhancer -->
    <script src="~/Design/js/jquery.chosen.min.js"></script>
    <!-- checkbox, radio, and file input styler -->
    <script src="~/Design/js/jquery.uniform.min.js"></script>
    <!-- plugin for gallery image view -->
    <script src="~/Design/js/jquery.colorbox.min.js"></script>
    <!-- rich text editor library -->
    <script src="~/Design/js/jquery.cleditor.min.js"></script>
    <!-- notification plugin -->
    <script src="~/Design/js/jquery.noty.js"></script>
    <!-- file manager library -->
    <script src="~/Design/js/jquery.elfinder.min.js"></script>
    <!-- star rating plugin -->
