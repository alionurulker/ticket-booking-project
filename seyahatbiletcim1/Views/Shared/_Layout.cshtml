                                            <div class="form-group">
                                                <textarea name="message" class="form-control" placeholder="Mesaj" required></textarea>
                                            </div>
                                            <div class="form-group alerts">

                                                <div class="alert alert-success" role="alert">

                                                </div>
                                                <div class="alert alert-danger" role="alert">

                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-submit pull-right">@Html.Name(seyahatbiletcim1.Resource.HomeText.Submit)</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
