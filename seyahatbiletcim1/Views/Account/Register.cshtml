@model seyahatbiletcim1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<!-- Uye Modal  -->
<div class="modal fade" id="UyeModal" tabindex="-1" role="dialog" aria-labelledby="donateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="donateModalLabel">@Html.Name(seyahatbiletcim1.Resource.HomeText.Kayit5)</h4>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <h4 class="title text-center">@Html.Name(seyahatbiletcim1.Resource.HomeText.Kayit6) <span class="title-under"></span>  </h4>
                    <div class="row" style="margin-left:30px">

                        <div class="form-group col-md-5">
                            @Html.Label(seyahatbiletcim1.Resource.HomeText.kayit)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ad" })
                        </div>

                        <div class="col-md-2"></div>

                        <div class="form-group col-md-5">
                            @Html.Label(seyahatbiletcim1.Resource.HomeText.Kayit1)
                            @Html.TextBoxFor(m => m.SurName, new { @class = "form-control", placeholder = "Soyad" })
                        </div>
                    </div>

                    <div class="row" style="margin-left:30px">

                        @Html.ValidationSummary("", new { @class = "text-danger", placeholder = "E-Mail" })
                        <div class="col-md-2"><label>@Html.Name(seyahatbiletcim1.Resource.HomeText.Kayit2)</label></div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail Adresi" })
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-left:30px">
                        <div class="form-group col-md-5">
                            <label>@Html.Name(seyahatbiletcim1.Resource.HomeText.Kayit3)</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola" })

                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-5">
                            <label>@Html.Name(seyahatbiletcim1.Resource.HomeText.Kayit4)</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Parola Tekrarı" })
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.RoleName, new { @Value = "Kullanici" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <button type="submit" onclick="Home/Index" class="btn btn-primary pull-right" name="donateNow">@Html.Name(seyahatbiletcim1.Resource.HomeText.Signup)</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> <!-- /.modal -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
